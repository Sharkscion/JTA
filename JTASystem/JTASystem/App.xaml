<Application x:Class="JTASystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JTASystem"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Order is Important-->

                <ResourceDictionary Source="Resource/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resource/Styles/Fonts.xaml"/>
                <ResourceDictionary Source="Resource/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Resource/Styles/Texts.xaml"/>
                <ResourceDictionary Source="Resource/Styles/Forms.xaml"/>
                <ResourceDictionary Source="Resource/Styles/Windows.xaml"/>


            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
