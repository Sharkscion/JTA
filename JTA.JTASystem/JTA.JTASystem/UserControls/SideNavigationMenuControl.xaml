<UserControl x:Class="JTA.JTASystem.SideNavigationMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JTA.JTASystem"
             xmlns:core="clr-namespace:JTA.JTASystem.Core;assembly=JTA.JTASystem.Core"
             mc:Ignorable="d" 
             d:DataContext ="{d:DesignInstance {x:Type core:MenuStructureDesign}, IsDesignTimeCreatable=True}"
             d:DesignHeight="500" d:DesignWidth="300">

    <Grid Background="{StaticResource BackgroundDarkestBrush}">
        <Border Padding="10">

            <StackPanel>
                <!--logo of the company-->
                <Border Padding="10"
                        Margin="0 10">
                    
                    <Image Source="/Resources/Logo/JTA-logo-XXL.png" 
                       Height="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
                </Border>

                <ItemsControl ItemTemplate="{DynamicResource MenuItemTemplate}" 
                              ItemsSource="{Binding MenuItems}">
                </ItemsControl>

            </StackPanel>

        </Border>
    </Grid>
    
</UserControl>
